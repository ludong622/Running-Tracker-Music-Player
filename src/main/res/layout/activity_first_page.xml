<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#d5ccf0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MapsActivity">

    <Button
        android:id="@+id/run"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="114dp"
        android:background="@drawable/shape2"
        android:onClick="toRun"
        android:text="Run" />

    <Button
        android:id="@+id/music"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/run"
        android:layout_marginEnd="73dp"
        android:background="@drawable/shape3"
        android:onClick="toMusic"
        android:text="Music" />

    <Button
        android:id="@+id/history"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/run"
        android:layout_marginBottom="187dp"
        android:background="@drawable/shape4"
        android:onClick="toHistory"
        android:text="History" />

    <Button
        android:id="@+id/pace"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/history"
        android:layout_marginEnd="73dp"
        android:background="@drawable/shape5"
        android:onClick="toCalclutor"
        android:text="Calculator" />

</RelativeLayout>
